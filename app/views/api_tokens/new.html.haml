.page-header
  %h2= t("api_tokens.title.#{params[:action]}")

.col-sm-9.column.col-sm-offset-1
  = simple_form_for @api_token, html: { class: 'form-horizontal' } do |f|
    = f.input :email
    = f.input :nombre
    = f.input :fecha_expiracion, as: :string, input_html: { value: format_date(f.object.fecha_expiracion) }

    = render 'shared/form_buttons'
